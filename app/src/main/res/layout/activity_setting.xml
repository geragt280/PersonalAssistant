<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bkg4"
    tools:context=".SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginTop="100dp"
       android:layout_gravity="center"
        android:background="@drawable/pp"
        />
    <Button
        android:id="@+id/edit_img_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Edit"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@color/cardview_shadow_start_color"
        android:layout_marginLeft="286dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="-40dp"/>


    <Button
        android:id="@+id/edit_info_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Edit Personal Info"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/edit_schedule_button"
        android:layout_width="180dp"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Edit Personal schedule"
        android:layout_marginLeft="200dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="-48dp"/>

</LinearLayout>