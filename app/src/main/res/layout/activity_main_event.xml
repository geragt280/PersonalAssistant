<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bkg4"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".MainEvent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbaar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/SkyBlue"
            android:textStyle="bold"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="WELCOME"
            app:titleMarginStart="135dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Current"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:text="- - : - -"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_recent_name"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_marginTop="-100dp"
            android:layout_marginLeft="170dp"
            android:background="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Up-comming"
            android:textColor="@color/black"
            android:layout_marginTop="-110dp"
            android:layout_marginLeft="200dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_up_coming_time"
            android:layout_width="wrap_content"
            android:text="- - : - -"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_upcoming_name"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="200dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/button_view_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:textAllCaps="false"
            android:layout_marginRight="100dp"
            android:background="@drawable/main_buttons"
            android:text="View Events"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_view_todays_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_marginRight="100dp"
            android:background="@drawable/main_buttons"
            android:text="View Todays Event"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_add_event"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/main_buttons"
            android:text="Add Event"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_add_appiontments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:textAllCaps="false"
            android:background="@drawable/main_buttons"
            android:text="Add Appointments"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_redirect_to_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/main_buttons"
            android:text="Find Places To Visit"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_today_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:textAllCaps="false"
            android:background="@drawable/main_buttons"
            android:text="Show Today's Progress"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="-50dp"
            android:text="Voice Assist"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/button_voice_activation"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginBottom="-20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gmic2"
            android:textColor="@color/blue" />

    </LinearLayout>
</ScrollView>